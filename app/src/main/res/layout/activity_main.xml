<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bilgetech.libraries.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.bilgetech.widgets.ui.imageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_fill_color="@color/colorAccent" />

        <com.bilgetech.widgets.ui.imageview.ProfileImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/colorPrimaryDark" />

        <com.bilgetech.widgets.ui.imageview.SimpleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

    <com.bilgetech.widgets.ui.toolbar.SimpleToolbarLayout_
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <com.bilgetech.widgets.ui.toolbar.MainToolbarLayout_
        android:id="@+id/mainToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent" />

    <com.bilgetech.widgets.ui.button.ProgressButton
        android:id="@+id/pbSendWithLoading"
        style="@style/ProgressButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send" />

    <com.bilgetech.widgets.ui.button.ProgressButton
        android:id="@+id/pbSendWithError"
        style="@style/ProgressButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        app:errorText="Failed"
        app:successText="Success" />

    <com.bilgetech.widgets.ui.button.ProgressButton
        android:id="@+id/pbSendWithSuccess"
        style="@style/ProgressButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        app:errorText="Failed"
        app:successText="Success" />

    <com.bilgetech.widgets.ui.RecyclerViewLayout_
        android:id="@+id/recyclerViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
